<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dyl="http://schemas.android.com/apk/res/com.dyl.chatbot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    android:clickable="true"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context="com.jay.wechat.MainActivity">
 
    
 
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:background="@color/tab_botoom_default_color">
 
        <com.dyl.chatbot.anim.ChangeColorIconWithText 
            android:layout_width="0dp"
            android:layout_height="match_parent"
         	dyl:text="聊天"  
         	android:padding="5dp"
         	dyl:color="#ff45c01a"
         	dyl:icon="@drawable/chat_list"
         	dyl:text_size="12sp"
            android:layout_weight="1"
            />
        <com.dyl.chatbot.anim.ChangeColorIconWithText 
            android:layout_width="0dp"
            android:layout_height="match_parent"
         	dyl:text="聊天"  
         	dyl:icon="@drawable/friend_list"
         	dyl:text_size="12sp"
            android:layout_weight="1"
            dyl:color="#ff45c01a"
            android:padding="5dp"
            />
        <com.dyl.chatbot.anim.ChangeColorIconWithText 
            android:layout_width="0dp"
            android:layout_height="match_parent"
         	dyl:text="聊天"  
         	dyl:icon="@drawable/personal_center"
         	dyl:text_size="12sp"
         	android:padding="5dp"
            android:layout_weight="1"
            dyl:color="#ff45c01a"
            />
    </LinearLayout>
</LinearLayout>